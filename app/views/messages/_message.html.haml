/ .message-wide
/   .upper-message
/     %p.upper-message__user-name
/       = message.user.name
/     %p.upper-message__date
/       = message.created_at
/   - if message.content.present?
/     %span.lower-message__content
/       = message.content
/     = image_tag message.image, class: 'lower-message__image' if message.image.present?
.message-wide
  .upper-message
    .upper-message__user-name
      %p= message.user.name
    .upper-message__date
      %p= message.created_at
  .lower-message__content
    %p= message.content
    = image_tag message.image if message.image.present?